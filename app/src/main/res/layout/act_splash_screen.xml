<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Act_Splash_Screen">

    <include layout="@layout/layout_no_internet"
        android:id="@+id/no_internet"
        android:visibility="gone"/>

<!--    <ImageView-->
<!--        android:id="@+id/img_CrownICon"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_margin="20dp"-->
<!--        android:src="@drawable/crown_cement_icon"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:elevation="5dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/splash_screen"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/developed_by"
                android:textColor="#BEBABA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottie"
                app:layout_constraintVertical_bias="0.838"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivoblack"
                android:gravity="center"
                android:text="@string/crown_cement"
                android:textColor="#116D41"
                android:textSize="22sp"
                android:padding="5dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txtAppVersionNo"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/txtAppVersionNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#BEBABA"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottie"
                app:layout_constraintVertical_bias="0.986"
                tools:layout_editor_absoluteX="0dp" />


        </LinearLayout>


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>