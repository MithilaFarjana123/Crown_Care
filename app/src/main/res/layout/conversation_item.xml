<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_panorama_fish_eye_24"
                />

            <!--        android:src="@drawable/ic_dot_orange"-->



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">



            <TextView
                android:id="@+id/hf_reportingBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Md.Abdur Rahman"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/hf_replyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Jun 10,2023 "
                />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgApStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <!--        android:src="@drawable/ic_dot_orange"-->

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#d5f5e3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#239b56"
                android:backgroundTint="#239b56"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/feedback_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback Date : Jun 10, 2023"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/hf_reprtingBCom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:text="We are considering your issue . Make a schduale as soon as possible "
                        />


                    <TextView
                        android:id="@+id/seen_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jun 10, 2023"
                        android:layout_marginRight="10dp"
                        android:gravity="end"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>






</LinearLayout>





