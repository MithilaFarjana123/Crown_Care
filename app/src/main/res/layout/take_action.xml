            <!--Card Image-->
            <androidx.cardview.widget.CardView
                android:id="@+id/laytakeActDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="0.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="10dp"
                            android:text="Attach document"
                            android:textSize="18sp" />




                        <ImageView
                            android:id="@+id/pdfAddDoc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="5dp"
                            android:src="@drawable/ic_add_pdf" />


                        <ImageView
                            android:id="@+id/imgAddDoc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="5dp"
                            android:src="@drawable/add_image" />

                        <ImageView
                            android:id="@+id/addCameraDoc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="5dp"
                            android:src="@drawable/baseline_camera_alt_24" />




                    </LinearLayout>



                    <androidx.cardview.widget.CardView
                        app:cardElevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="8dp">


                        <ImageView
                            android:id="@+id/setActionImage"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:src="@drawable/attach_image" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


