<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complain Summary"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#070707"/>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="272dp"
                android:layout_weight="0.5"
                android:orientation="vertical"

                >

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<!--1st card-->
                    <LinearLayout
                        android:background="#fae5d3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_interpreter_mode_24"/>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>





                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/txtShopOwner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="of total Oppose"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

<!--                  2nd card-->
                    <LinearLayout
                        android:background="#ebdef0"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/baseline_done_outline_24"/>

                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Resolved "
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Issue"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_weight="0.4"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+100%"
                                android:textSize="11sp" />

                            <ImageView
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:src="@drawable/baseline_bar_chart_24_purple" />



                        </LinearLayout>





                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                />
            <!--2nd part-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="272dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="#eafaf1 "
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/baseline_graphic_eq_24"/>

                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Proceeding"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_weight="0.4"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+100%"
                                android:textSize="11sp" />

                            <ImageView
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:src="@drawable/grean_bar" />



                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#d6eaf8 "
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/baseline_design_services_24"/>

                            </androidx.cardview.widget.CardView>




                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rejected"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp" />



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>